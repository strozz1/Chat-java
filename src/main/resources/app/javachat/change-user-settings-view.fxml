<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="139.0" prefWidth="270.0" styleClass="primaryColor" stylesheets="@darkMode-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.javachat.Controllers.ViewControllers.ChangeUserSettingsViewController">
   <children>
      <Label styleClass="textColor" text="Change username">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="inputTextChangeUsername" onKeyPressed="#onKeyPressed">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <styleClass>
            <String fx:value="textColor" />
            <String fx:value="secondaryColor" />
         </styleClass>
      </TextField>
      <Button mnemonicParsing="false" styleClass="addButton" text="Save" onMouseClicked="#onSaveBtn"/>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
