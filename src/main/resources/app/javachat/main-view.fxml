<BorderPane fx:id="parent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="1000.0" stylesheets="@lightMode-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.javachat.Controllers.MainController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="74.0" styleClass="secondaryColor" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#onThemeButtonClicked" prefHeight="46.0" prefWidth="46.0">
               <graphic>
                  <ImageView fx:id="themeImage" blendMode="GREEN" fitHeight="33.0" fitWidth="34.0" nodeOrientation="INHERIT" onMouseClicked="#onThemeButtonClicked" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../img/darkIconTheme.png" />
                     </image>
                  </ImageView>
               </graphic>
               <styleClass>
                  <String fx:value="roundButton" />
                  <String fx:value="themeButton" />
               </styleClass>
            </Button>
            <Button fx:id="btnLog" mnemonicParsing="false" onAction="#onLogPressed" text="Log" />
            <Button mnemonicParsing="false" onAction="#getButtonLLamar" text="Llamar" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="20.0" />
         </padding></VBox>
   </left>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" styleClass="primaryColor" BorderPane.alignment="CENTER">
         <children>
            <BorderPane prefHeight="649.0" prefWidth="899.0">
               <center>
                  <ScrollPane prefHeight="566.0" prefWidth="895.0" styleClass="primaryColor" BorderPane.alignment="CENTER">
                     <content>
                        <ListView fx:id="contenedorMensajes" prefHeight="598.0" prefWidth="897.0" styleClass="primaryColor" />
                     </content>
                  </ScrollPane>
               </center>
               <bottom>
                  <HBox alignment="CENTER" prefHeight="49.0" prefWidth="501.0" styleClass="secondaryColor" BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="chatInput" nodeOrientation="LEFT_TO_RIGHT" prefHeight="36.0" prefWidth="642.0" promptText="Escribe algo.." styleClass="textColor">
                           <cursor>
                              <Cursor fx:constant="TEXT" />
                           </cursor>
                        </TextField>
                        <Button fx:id="botonEnviarMensaje" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#onSendMensaje" text="Send">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <styleClass>
                              <String fx:value="primaryColor" />
                              <String fx:value="textColor" />
                              <String fx:value="roundButton" />
                           </styleClass>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </bottom>
            </BorderPane>
         </children>
      </Pane>
   </center>
</BorderPane>
