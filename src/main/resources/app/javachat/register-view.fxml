<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="358.0" spacing="20.0" styleClass="primaryColor" stylesheets="@darkMode-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="312.0" styleClass="textColor" text="Register" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="30.0" />
      </font></Label>
   <Label prefHeight="30.0" prefWidth="409.0" styleClass="textColor" text="Username">
      <font>
         <Font size="20.0" />
      </font>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </Label>
   <TextField fx:id="usernameInput" styleClass="textColor2">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </TextField>
   <Label prefHeight="17.0" prefWidth="396.0" styleClass="textColor" text="Email">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
      <font>
         <Font size="20.0" />
      </font>
   </Label>
   <TextField fx:id="emailInput" styleClass="textColor2">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </TextField>
   <Label prefHeight="17.0" prefWidth="396.0" styleClass="textColor" text="Password">
      <font>
         <Font size="20.0" />
      </font>
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </Label>
   <TextField fx:id="passwordInput" styleClass="textColor2">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin>
   </TextField>
   <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="318.0">
      <children>
         <Button fx:id="goLoginButton" alignment="CENTER" mnemonicParsing="false" styleClass="transparentBackGround" stylesheets="@darkMode-style.css" text="Have an account? Login" textFill="#0563ff">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="registerButton" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Register">
            <font>
               <Font size="13.0" />
            </font>
         </Button>
      </children>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
   </HBox>
</VBox>
