         <Label text="Servidor">
            <HBox.margin>
               <Insets right="12.0" />
            </HBox.margin>
         </Label>
         <TextField fx:id="inputServerCreate" />
      </children>
   </HBox>
   <HBox alignment="BASELINE_CENTER" prefHeight="0.0" prefWidth="200.0">
      <children>
         <Label text="Puerto">
            <HBox.margin>
               <Insets right="12.0" />
            </HBox.margin>
         </Label>
         <TextField fx:id="inputPortCreate" />
      </children>
   </HBox>
   <Button mnemonicParsing="false" onMouseClicked="#onCreateServer" text="Crear" />
