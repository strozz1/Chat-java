<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="196.0" prefWidth="302.0" style="-fx-border-radius: 20;" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="NEVER">
            <children>
                <Circle fill="#2a4f72" radius="30.0" stroke="BLACK" strokeType="INSIDE"/>
                <Label fx:id="incomingCallUser" alignment="BOTTOM_LEFT" contentDisplay="CENTER"
                       maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="60.0"
                       prefWidth="191.0" text="Oscar Gonzalez">
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                    <padding>
                        <Insets bottom="10.0"/>
                    </padding>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="40.0" right="40.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="labelTiempoLlamada" text="Tiempo de llamada">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets right="10.0"/>
                    </padding>
                    <font>
                        <Font name="System Bold Italic" size="14.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="57.0" prefWidth="300.0">
            <children>
                <Button fx:id="acceptCallButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0"
                        prefWidth="97.0" style="-fx-background-color: blue; -fx-background-radius: 90;">
                    <graphic>
                        <ImageView fitHeight="36.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"
                                   rotate="176.1">
                            <image>
                                <Image url="@images/close-call.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>

                </Button>
                <Button fx:id="cancelCallButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0"
                        prefWidth="97.0" style="-fx-background-color: red; -fx-background-radius: 90;">
                    <graphic>
                        <ImageView fitHeight="36.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true"
                                   rotate="176.1">
                            <image>
                                <Image url="@images/close-call.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
            <padding>
                <Insets bottom="7.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
